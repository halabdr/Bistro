<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.BistroClientUIController"
      spacing="10"
      prefWidth="720" prefHeight="480"
      stylesheets="@client.css"
      styleClass="root-pane">
      

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <children>
        <Label text="Bistro Orders" styleClass="title-label"/>

       <HBox spacing="10">
       <children>
       <Button text="Load orders"
                onAction="#handleLoadOrders"
                styleClass="btn-primary"/>

       <Button text="Update order"
                onAction="#handleUpdateOrder"
                styleClass="btn-secondary"/>

       <Button text="Clear"
                onAction="#handleClear"
                styleClass="btn-danger"/>
       </children>
	   </HBox>

        <TextArea fx:id="ordersArea"
                  editable="false"
                  VBox.vgrow="ALWAYS"/>

        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="80"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="220"/>
            </columnConstraints>

            <children>
                <Label text="Order #:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="orderNumberField"
                           promptText="Order number"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="New date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="dateField"
                           promptText="YYYY-MM-DD"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Guests:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="guestsField"
                           promptText="Number of guests"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </children>
</VBox>