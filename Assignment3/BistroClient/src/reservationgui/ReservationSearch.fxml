<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="reservationgui.ReservationSearchController"
      styleClass="login-split-container"
      stylesheets="@/styles/bistro_main.css"
      prefHeight="700" prefWidth="1000">

    <!-- Left panel -->
    <VBox styleClass="login-left-panel" prefWidth="450" alignment="CENTER" spacing="25">
        <Region VBox.vgrow="ALWAYS"/>

        <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
            <image><Image url="@/styles/bistro_logo.png"/></image>
        </ImageView>

        <Label text="BISTRO" styleClass="welcome-logo-text"/>
        <Label text="Book a Reservation" styleClass="welcome-subtitle"/>

        <Label text="Pick date + guests, then choose a time"
               style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 16px; -fx-font-weight: 500;"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Label text="Â© 2026 Bistro Restaurant"
               style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11px;"/>
    </VBox>

    <!-- Right panel -->
    <VBox styleClass="menu-page" prefWidth="550" alignment="CENTER" spacing="16" HBox.hgrow="ALWAYS">
        <Region VBox.vgrow="ALWAYS"/>

        <VBox maxWidth="520" styleClass="form-box" spacing="10">
            <Label text="Find Available Times" styleClass="login-title"/>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <VBox spacing="6">
                    <Label text="Date" styleClass="form-label-text"/>
                    <DatePicker fx:id="datePicker" />
                </VBox>

                <VBox spacing="6">
                    <Label text="Guests" styleClass="form-label-text"/>
                    <Spinner fx:id="dinersSpinner" prefWidth="140"/>
                </VBox>

                <Button text="Check"
                        onAction="#onCheck"
                        styleClass="welcome-action-button"
                        style="-fx-min-width: 140px; -fx-min-height: 38px;"/>
            </HBox>

            <Label fx:id="resultLabel"
                   text=""
                   style="-fx-text-fill: #718096; -fx-font-size: 12px;"/>

            <ListView fx:id="timesList" prefHeight="320"/>
        </VBox>

        <HBox spacing="12" alignment="CENTER">
            <Button text="Back"
                    onAction="#onBack"
                    styleClass="welcome-action-button-secondary"
                    style="-fx-min-width: 200px;"/>
            <Button fx:id="continueBtn"
                    text="Continue"
                    onAction="#onContinue"
                    disable="true"
                    styleClass="welcome-action-button"
                    style="-fx-min-width: 200px;"/>
        </HBox>

        <Region VBox.vgrow="ALWAYS"/>
    </VBox>

</HBox>
