<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="homegui.HomeController"
           style="-fx-background-color: #f1f5f9;">

    <VBox alignment="CENTER" spacing="18" maxWidth="720">

        <!-- Header -->
        <VBox alignment="CENTER" spacing="6">
            <Label text="Bistro"
                   style="-fx-font-size: 34px; -fx-font-weight: 800; -fx-text-fill: #0f172a;"/>
            <Label text="Choose how you want to continue"
                   style="-fx-font-size: 14px; -fx-text-fill: #475569;"/>
        </VBox>

        <!-- Cards grid -->
        <GridPane hgap="18" vgap="18" maxWidth="720" alignment="CENTER">

            <!-- Customer card -->
            <VBox spacing="10" prefWidth="320"
                  GridPane.columnIndex="0" GridPane.rowIndex="0"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: #e2e8f0;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0.2, 0, 8);">

                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <children>
                    <HBox spacing="10" alignment="CENTER_LEFT"
                          style="-fx-background-color: #e0f2fe; -fx-background-radius: 18 18 0 0;">
                        <Label text="Remote Customer"
                               style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-text-fill: #0f172a;"/>
                    </HBox>

                    <Label text="Book a reservation, pay a bill, manage your visit."
                           wrapText="true"
                           style="-fx-text-fill: #475569; -fx-font-size: 13px;"/>

                    <Button text="Continue"
                            onAction="#onCustomerClicked"
                            style="-fx-background-radius: 12;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: 700;
                                   -fx-padding: 10 18;
                                   -fx-background-color: #0284c7;
                                   -fx-text-fill: white;"/>
                </children>
            </VBox>

            <!-- Terminal card -->
            <VBox spacing="10" prefWidth="320"
                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: #e2e8f0;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0.2, 0, 8);">

                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <children>
                    <HBox spacing="10" alignment="CENTER_LEFT"
                          style="-fx-background-color: #dcfce7; -fx-background-radius: 18 18 0 0;">
                        <Label text="Restaurant Terminal"
                               style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-text-fill: #0f172a;"/>
                    </HBox>

                    <Label text="Seat guests quickly using a confirmation code."
                           wrapText="true"
                           style="-fx-text-fill: #475569; -fx-font-size: 13px;"/>

                    <Button text="Enter Code"
                            onAction="#onTerminalClicked"
                            style="-fx-background-radius: 12;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: 700;
                                   -fx-padding: 10 18;
                                   -fx-background-color: #16a34a;
                                   -fx-text-fill: white;"/>
                </children>
            </VBox>

            <!-- Staff card (full width) -->
            <VBox spacing="10" prefWidth="658"
                  GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
                  style="-fx-background-color: white;
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: #e2e8f0;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0.2, 0, 8);">

                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <children>
                    <HBox spacing="10" alignment="CENTER_LEFT"
                          style="-fx-background-color: #fee2e2; -fx-background-radius: 18 18 0 0;">
                        <Label text="Staff Area"
                               style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-text-fill: #0f172a;"/>
                    </HBox>

                    <Label text="Managers &amp; Representatives only. Login to view dashboard and manage reservations."
                           wrapText="true"
                           style="-fx-text-fill: #475569; -fx-font-size: 13px;"/>

                    <Button text="Staff Login"
                            onAction="#onStaffClicked"
                            style="-fx-background-radius: 12;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: 700;
                                   -fx-padding: 10 18;
                                   -fx-background-color: #ef4444;
                                   -fx-text-fill: white;"/>
                </children>
            </VBox>

        </GridPane>

    </VBox>
</StackPane>