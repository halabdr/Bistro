<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.TerminalMenuController"
            stylesheets="@/styles/terminal.css"
            styleClass="terminal-bg"
            prefWidth="1100" prefHeight="720">

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="terminal-topbar">
            <padding>
                <Insets top="18" right="26" bottom="18" left="26"/>
            </padding>

            <VBox spacing="4">
                <Label text="Terminal Check-In" styleClass="terminal-title"/>
                <Label text="Welcome to Bistro Restaurant" styleClass="terminal-subtitle"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="Exit" onAction="#onBack" styleClass="btn-danger" prefHeight="42" prefWidth="100"/>
        </HBox>
    </top>

    <!-- Center -->
    <center>
        <StackPane alignment="CENTER">
            <padding>
                <Insets top="30" right="50" bottom="40" left="50"/>
            </padding>

            <VBox styleClass="terminal-card"
                  alignment="CENTER"
                  spacing="30"
                  maxWidth="850"
                  prefWidth="850">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>

                <!-- Header -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="How can we help you today?" 
                           style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #1e293b;"/>
                    <Label text="Select an option below"
                           style="-fx-text-fill: #64748b; -fx-font-size: 15px;"/>
                </VBox>

                <Separator style="-fx-background-color: #e2e8f0;" opacity="0.5"/>

                <!-- Main Actions - 2x2 Grid -->
                <GridPane hgap="24" vgap="24" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="360"/>
                        <ColumnConstraints prefWidth="360"/>
                    </columnConstraints>

                    <!-- 1) Check Availability -->
                    <VBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="0"
                          style="-fx-background-color: #f0f9ff; -fx-background-radius: 16; -fx-padding: 20;
                                 -fx-border-color: #bae6fd; -fx-border-radius: 16;">
                        <Label text="No reservation?" style="-fx-text-fill: #0369a1; -fx-font-size: 13px; -fx-font-weight: 600;"/>
                        <Button onAction="#onCheckAvailability"
                                text="ðŸ”Ž  Check Availability"
                                styleClass="btn-primary"
                                prefHeight="60"
                                maxWidth="Infinity"/>
                        <Label text="Check if a table is available now" 
                               style="-fx-text-fill: #64748b; -fx-font-size: 11px;"/>
                    </VBox>

                    <!-- 2) Seat by Code -->
                    <VBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1"
                          style="-fx-background-color: #f0fdf4; -fx-background-radius: 16; -fx-padding: 20;
                                 -fx-border-color: #bbf7d0; -fx-border-radius: 16;">
                        <Label text="Have a reservation?" style="-fx-text-fill: #166534; -fx-font-size: 13px; -fx-font-weight: 600;"/>
                        <Button onAction="#onSeatByCode"
                                text="ðŸŽŸï¸  Get Your Table"
                                styleClass="btn-success"
                                prefHeight="60"
                                maxWidth="Infinity"/>
                        <Label text="Check in with your confirmation code" 
                               style="-fx-text-fill: #64748b; -fx-font-size: 11px;"/>
                    </VBox>

                    <!-- 3) Pay Bill -->
                    <VBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="0"
                          style="-fx-background-color: #fefce8; -fx-background-radius: 16; -fx-padding: 20;
                                 -fx-border-color: #fef08a; -fx-border-radius: 16;">
                        <Label text="Finished dining?" style="-fx-text-fill: #a16207; -fx-font-size: 13px; -fx-font-weight: 600;"/>
                        <Button onAction="#onPayBill"
                                text="ðŸ’³  Pay Bill"
                                styleClass="btn-warning"
                                prefHeight="60"
                                maxWidth="Infinity"/>
                        <Label text="Pay your bill and free up the table" 
                               style="-fx-text-fill: #64748b; -fx-font-size: 11px;"/>
                    </VBox>

                    <!-- 4) More Options -->
                    <VBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="1"
                          style="-fx-background-color: #f8fafc; -fx-background-radius: 16; -fx-padding: 20;
                                 -fx-border-color: #e2e8f0; -fx-border-radius: 16;">
                        <Label text="Need something else?" style="-fx-text-fill: #475569; -fx-font-size: 13px; -fx-font-weight: 600;"/>
                        <Button onAction="#onMoreOptions"
                                text="âš™ï¸  More Options"
                                styleClass="btn-secondary"
                                prefHeight="60"
                                maxWidth="Infinity"/>
                        <Label text="Cancel, leave waitlist, lost code" 
                               style="-fx-text-fill: #64748b; -fx-font-size: 11px;"/>
                    </VBox>

                </GridPane>

                <Pane VBox.vgrow="ALWAYS"/>

                <!-- Hint -->
                <Label text="ðŸ’¡ Tip: Subscribers can also identify using their membership card"
                       wrapText="true"
                       style="-fx-text-fill: #64748b; -fx-font-size: 12px;"
                       maxWidth="700"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>