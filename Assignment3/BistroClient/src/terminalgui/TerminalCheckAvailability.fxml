<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.TerminalCheckAvailabilityController"
            stylesheets="@/styles/terminal.css"
            styleClass="terminal-bg"
            prefWidth="1100" prefHeight="720">

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="terminal-topbar">
            <padding>
                <Insets top="18" right="30" bottom="18" left="30"/>
            </padding>

            <VBox spacing="4">
                <Label text="Check Availability" styleClass="terminal-title"/>
                <Label text="Get seated now or join the waitlist" styleClass="terminal-subtitle"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="â† Back" onAction="#onBack" styleClass="btn-danger" prefHeight="42" prefWidth="100"/>
        </HBox>
    </top>

    <!-- Center -->
    <center>
        <HBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="20" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Left Card: Form -->
            <VBox styleClass="terminal-card" spacing="24" prefWidth="520" minHeight="500">
                <padding>
                    <Insets top="32" right="36" bottom="32" left="36"/>
                </padding>

                <!-- Header -->
                <VBox spacing="6">
                    <Label text="Reservation Details" styleClass="section-title"/>
                    <Label text="Fill in the details below to check table availability"
                           style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                </VBox>

                <Separator style="-fx-background-color: #e2e8f0;"/>

                <!-- Number of Guests -->
                <VBox spacing="10">
                    <Label text="Number of Guests" style="-fx-font-weight: 700; -fx-font-size: 14px; -fx-text-fill: #334155;"/>
                    <HBox spacing="14" alignment="CENTER_LEFT">
                        <Spinner fx:id="dinersSpinner" prefWidth="140" prefHeight="44"
                                 style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
                        <Label text="people" style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
                    </HBox>
                </VBox>

                <!-- Customer Type -->
                <VBox spacing="12">
                    <Label text="Customer Type" style="-fx-font-weight: 700; -fx-font-size: 14px; -fx-text-fill: #334155;"/>
                    <HBox spacing="24" alignment="CENTER_LEFT">
                        <RadioButton fx:id="subscriberRadio" text="Subscriber" 
                                     style="-fx-font-size: 14px;"/>
                        <RadioButton fx:id="guestRadio" text="Walk-in Guest" 
                                     style="-fx-font-size: 14px;"/>
                    </HBox>
                </VBox>

                <!-- Subscriber Section -->
                <VBox fx:id="subscriberBox" spacing="10">
                    <Label text="Membership Card" style="-fx-font-weight: 600; -fx-font-size: 13px; -fx-text-fill: #334155;"/>
                    <TextField fx:id="subscriberField"
                               promptText="Scan your membership card (QR code)"
                               prefHeight="46"
                               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #cbd5e1; -fx-padding: 0 14;"/>
                    <Label text="* Scan or enter your membership card code"
                           style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                </VBox>

                <!-- Guest Section -->
                <VBox fx:id="guestBox" spacing="12">
                    <Label text="Contact Information" style="-fx-font-weight: 600; -fx-font-size: 13px; -fx-text-fill: #334155;"/>
                    <VBox spacing="10">
                        <TextField fx:id="phoneField"
                                   promptText="Phone number (05X-XXXXXXX)"
                                   prefHeight="46"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #cbd5e1; -fx-padding: 0 14;"/>
                        <TextField fx:id="emailField"
                                   promptText="Email address"
                                   prefHeight="46"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #cbd5e1; -fx-padding: 0 14;"/>
                    </VBox>
                    <Label text="* Both phone and email are required"
                           style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                </VBox>

                <Pane VBox.vgrow="ALWAYS"/>

                <!-- Action Button -->
                <Button fx:id="checkButton"
                        text="ðŸ”  Check Availability"
                        onAction="#onCheckAvailability"
                        styleClass="btn-primary"
                        prefHeight="52"
                        maxWidth="Infinity"/>
            </VBox>

            <!-- Right Card: Result -->
            <VBox styleClass="terminal-card" spacing="20" prefWidth="420" minHeight="500">
                <padding>
                    <Insets top="32" right="36" bottom="32" left="36"/>
                </padding>

                <!-- Header -->
                <VBox spacing="6">
                    <Label text="Result" styleClass="section-title"/>
                    <Label text="Your availability status will appear here"
                           style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                </VBox>

                <Separator style="-fx-background-color: #e2e8f0;"/>

                <!-- Status Message -->
                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label text="Status" style="-fx-font-weight: 600; -fx-font-size: 13px; -fx-text-fill: #64748b;"/>
                    <Label fx:id="statusLabel"
                           text="Enter your details and click 'Check Availability'"
                           wrapText="true"
                           style="-fx-text-fill: #334155; -fx-font-size: 14px; -fx-line-spacing: 4;"/>
                </VBox>

                <!-- Code/Table Display -->
                <VBox fx:id="resultBox" spacing="10" visible="false" managed="false"
                      style="-fx-background-color: linear-gradient(to bottom right, #f0f9ff, #e0f2fe); 
                             -fx-background-radius: 16; -fx-padding: 20; 
                             -fx-border-color: #bae6fd; -fx-border-radius: 16;">
                    <Label text="Your Code / Table Number"
                           style="-fx-text-fill: #0369a1; -fx-font-size: 12px; -fx-font-weight: 600;"/>
                    <Label fx:id="codeLabel"
                           text="â€”"
                           style="-fx-text-fill: #0c4a6e; -fx-font-weight: 900; -fx-font-size: 28px; -fx-font-family: 'Consolas';"/>
                </VBox>

                <!-- Join Waitlist Button (initially hidden) -->
                <VBox fx:id="joinWaitlistBox" spacing="12" visible="false" managed="false"
                      style="-fx-background-color: #fffbeb; -fx-background-radius: 12; -fx-padding: 20;
                             -fx-border-color: #fef08a; -fx-border-radius: 12;">
                    <Label text="No table available right now"
                           style="-fx-text-fill: #92400e; -fx-font-size: 14px; -fx-font-weight: 600;"/>
                    <Label text="Would you like to join the waitlist? You'll be notified when a table is ready."
                           wrapText="true"
                           style="-fx-text-fill: #a16207; -fx-font-size: 13px;"/>
                    <Button text="âœ“ Yes, Join Waitlist"
                            onAction="#onJoinWaitlist"
                            styleClass="btn-warning"
                            prefHeight="46"
                            maxWidth="Infinity"/>
                </VBox>

                <Separator style="-fx-background-color: #e2e8f0;"/>

                <!-- Tip Section -->
                <VBox spacing="8"
                      style="-fx-background-color: #fefce8; -fx-background-radius: 12; -fx-padding: 16; 
                             -fx-border-color: #fef08a; -fx-border-radius: 12;">
                    <Label text="ðŸ’¡ Tip" style="-fx-text-fill: #a16207; -fx-font-weight: 700; -fx-font-size: 13px;"/>
                    <Label text="If you received a notification that your table is ready, use 'Seat by Code' from the terminal menu."
                           wrapText="true"
                           style="-fx-text-fill: #854d0e; -fx-font-size: 12px; -fx-line-spacing: 2;"/>
                </VBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>