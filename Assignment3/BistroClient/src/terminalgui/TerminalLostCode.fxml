<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="terminalgui.TerminalLostCodeController"
      spacing="12" alignment="CENTER" prefWidth="420" prefHeight="320">

    <Label text="Terminal - Lost Code" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <Label text="Enter phone or email:"/>
    <TextField fx:id="identifierField" prefWidth="260"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Search in:"/>
        <ChoiceBox fx:id="typeChoice" prefWidth="180"/>
    </HBox>

    <Label fx:id="statusLabel"/>
    <Label fx:id="resultLabel"/>

    <HBox spacing="10">
        <Button text="Back" onAction="#onBack"/>
        <Button text="Send code" onAction="#onSend"/>
    </HBox>

</VBox>