<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.TerminalLostCodeController"
            stylesheets="@/terminalgui/styles/terminal.css"
            styleClass="terminal-bg">

    <top>
        <HBox styleClass="terminal-topbar" alignment="CENTER_LEFT" spacing="10">
            <VBox spacing="2">
                <Label text="Lost Code" styleClass="terminal-title"/>
                <Label text="Retrieve your reservation or waitlist code" styleClass="terminal-subtitle"/>
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" padding="30">
            <VBox styleClass="terminal-card" spacing="14" maxWidth="520">

                <Label text="Your identifier" styleClass="section-title"/>

                <TextField fx:id="identifierField"
                           promptText="Phone or email"
                           styleClass="terminal-field"/>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Search in" styleClass="terminal-subtitle"/>
                    <ChoiceBox fx:id="typeChoice" prefWidth="200" />
                </HBox>

                <Label fx:id="statusLabel" styleClass="terminal-hint"/>
                <Label fx:id="resultLabel" wrapText="true" styleClass="terminal-hint"/>

                <HBox spacing="10">
                    <Button text="Send Code" onAction="#onSend"
                            styleClass="btn-primary" prefHeight="44" prefWidth="180"/>
                    <Button text="Cancel" onAction="#onBack"
                            styleClass="btn-secondary" prefHeight="44" prefWidth="180"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
