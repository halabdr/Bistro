<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.TerminalLostCodeController"
            stylesheets="@/styles/terminal.css"
            styleClass="terminal-bg"
            prefWidth="640" prefHeight="520">

    <!-- Top -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="terminal-topbar">
            <padding>
                <Insets top="18" right="26" bottom="18" left="26"/>
            </padding>

            <VBox spacing="4">
                <Label text="Lost Code" styleClass="terminal-title"/>
                <Label text="Retrieve your reservation or waitlist code" styleClass="terminal-subtitle"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Back should return to Seat by Code -->
            <Button text="Back" onAction="#onBack"
                    styleClass="btn-secondary" prefHeight="42"/>
        </HBox>
    </top>

    <!-- Center -->
    <center>
        <StackPane alignment="CENTER">
            <padding>
                <Insets top="18" right="30" bottom="30" left="30"/>
            </padding>

            <VBox styleClass="terminal-card" maxWidth="560" spacing="16">
                <padding>
                    <Insets top="26" right="26" bottom="26" left="26"/>
                </padding>

                <VBox spacing="8">
                    <Label text="Your identifier" styleClass="section-title"/>
                    <Label text="Enter phone/email and weâ€™ll send your code" styleClass="terminal-hint"/>
                    <Separator opacity="0.18"/>
                </VBox>

                <TextField fx:id="identifierField"
                           promptText="Phone or email"
                           styleClass="terminal-field"/>

                <Label fx:id="statusLabel" styleClass="terminal-hint"/>
                <Label fx:id="resultLabel" wrapText="true" styleClass="terminal-hint"/>

                <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 6 0 0 0;">
                    <Button text="Send Code" onAction="#onSend"
                            prefHeight="52" prefWidth="220" styleClass="btn-primary"/>
                    <Button text="Cancel" onAction="#onBack"
                            prefHeight="52" prefWidth="220" styleClass="btn-secondary"/>
                </HBox>

                <Label text="Tip: Reservation = latest ACTIVE code. Waitlist = latest ACTIVE waitlist code."
                       wrapText="true" styleClass="terminal-hint"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
