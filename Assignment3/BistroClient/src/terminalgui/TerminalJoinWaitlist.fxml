<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.TerminalJoinWaitlistController"
            stylesheets="@/styles/terminal.css"
            styleClass="terminal-bg">

    <top>
        <HBox styleClass="terminal-topbar" alignment="CENTER_LEFT" spacing="10">
            <VBox spacing="2">
                <Label text="Join Waitlist" styleClass="terminal-title"/>
                <Label text="Enter your details to wait for a table" styleClass="terminal-subtitle"/>
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" padding="30">
            <VBox styleClass="terminal-card" spacing="14" maxWidth="520">

                <Label text="Details" styleClass="section-title"/>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Diners" styleClass="terminal-subtitle"/>
                    <Spinner fx:id="dinersSpinner" prefWidth="160"/>
                </HBox>

                <Label text="Subscriber number (optional)" styleClass="terminal-subtitle"/>
                <TextField fx:id="subscriberField" promptText="e.g., 123456"
                           styleClass="terminal-field"/>

                <Label fx:id="statusLabel" styleClass="terminal-hint"/>
                <Label fx:id="resultLabel" wrapText="true" styleClass="terminal-hint"/>

                <HBox spacing="10">
                    <Button text="Join" onAction="#onJoin" styleClass="btn-primary" prefHeight="44" prefWidth="180"/>
                    <Button text="Cancel" onAction="#onBack" styleClass="btn-secondary" prefHeight="44" prefWidth="180"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
