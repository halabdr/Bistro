<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="terminalgui.TerminalJoinWaitlistController"
      alignment="CENTER" spacing="20" styleClass="terminal-root"
      stylesheets="@/styles/terminal.css">

    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

    <Label text="Join Waitlist" styleClass="terminal-title"/>

    <!-- Number of diners -->
    <HBox alignment="CENTER" spacing="15">
        <Label text="Party Size:" styleClass="terminal-label"/>
        <Spinner fx:id="dinersSpinner" styleClass="terminal-spinner" prefWidth="100"/>
    </HBox>

    <!-- Customer type selection -->
    <HBox alignment="CENTER" spacing="30">
        <RadioButton fx:id="subscriberRadio" text="Subscriber" styleClass="terminal-radio"/>
        <RadioButton fx:id="guestRadio" text="Walk-in Guest" styleClass="terminal-radio"/>
    </HBox>

    <!-- Subscriber input -->
    <VBox fx:id="subscriberBox" alignment="CENTER" spacing="10">
        <Label text="Subscriber Number:" styleClass="terminal-label"/>
        <TextField fx:id="subscriberField" promptText="e.g. SUB001" 
                   styleClass="terminal-input" maxWidth="250"/>
    </VBox>

    <!-- Walk-in guest input -->
    <VBox fx:id="guestBox" alignment="CENTER" spacing="10" visible="false" managed="false">
        <Label text="Contact Information (at least one):" styleClass="terminal-label"/>
        <TextField fx:id="phoneField" promptText="Phone Number" 
                   styleClass="terminal-input" maxWidth="250"/>
        <TextField fx:id="emailField" promptText="Email Address" 
                   styleClass="terminal-input" maxWidth="250"/>
    </VBox>

    <!-- Status and result -->
    <Label fx:id="statusLabel" styleClass="terminal-status"/>
    <Label fx:id="resultLabel" styleClass="terminal-result"/>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="20">
        <Button text="Join Waitlist" onAction="#onJoin" styleClass="terminal-btn-primary"/>
        <Button text="Back" onAction="#onBack" styleClass="terminal-btn-secondary"/>
    </HBox>

</VBox>