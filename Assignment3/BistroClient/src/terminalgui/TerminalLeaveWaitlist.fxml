<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.TerminalLeaveWaitlistController"
            stylesheets="@/styles/terminal.css"
            styleClass="terminal-bg">

    <top>
        <HBox styleClass="terminal-topbar" alignment="CENTER_LEFT" spacing="10">
            <VBox spacing="2">
                <Label text="Leave Waitlist" styleClass="terminal-title"/>
                <Label text="If you no longer want to wait, remove yourself" styleClass="terminal-subtitle"/>
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <VBox styleClass="terminal-card" spacing="14" maxWidth="520">

                <Label text="Waitlist code" styleClass="section-title"/>

                <TextField fx:id="codeField" promptText="Enter your code"
                           styleClass="terminal-field"/>

                <Label fx:id="statusLabel" styleClass="terminal-hint"/>
                <Label fx:id="resultLabel" wrapText="true" styleClass="terminal-hint"/>

                <HBox spacing="10">
                    <Button text="Leave" onAction="#onLeave" styleClass="btn-danger" prefHeight="44" prefWidth="180"/>
                    <Button text="Cancel" onAction="#onBack" styleClass="btn-secondary" prefHeight="44" prefWidth="180"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
