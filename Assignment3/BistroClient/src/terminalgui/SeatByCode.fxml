<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="terminalgui.SeatByCodeController"
            stylesheets="@/styles/terminal.css"
            styleClass="terminal-bg">

    <top>
        <HBox styleClass="terminal-topbar" alignment="CENTER_LEFT" spacing="10">
            <VBox spacing="2">
                <Label text="Seat by Code" styleClass="terminal-title"/>
                <Label text="Enter your confirmation code to get seated" styleClass="terminal-subtitle"/>
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" padding="30">
            <VBox styleClass="terminal-card" spacing="14" maxWidth="520">

                <Label text="Confirmation Code" styleClass="section-title"/>

                <TextField fx:id="codeField"
                           promptText="e.g., ABC123"
                           styleClass="terminal-field"/>

                <Label fx:id="statusLabel" styleClass="terminal-hint"/>
                <Label fx:id="resultLabel" wrapText="true" styleClass="terminal-hint"/>

                <HBox spacing="10">
                    <Button text="Seat" onAction="#onSeat"
                            styleClass="btn-primary" prefHeight="44" prefWidth="180"/>
                    <Button text="Cancel" onAction="#onBack"
                            styleClass="btn-secondary" prefHeight="44" prefWidth="180"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
