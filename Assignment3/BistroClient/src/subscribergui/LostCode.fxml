<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="customergui.LostCodeController"
      spacing="10" alignment="CENTER" prefWidth="420" prefHeight="320">

    <Label text="Lost confirmation code" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Phone or email:"/>
        <TextField fx:id="identifierField" prefWidth="220"/>
    </HBox>

    <Label fx:id="statusLabel"/>
    <Label fx:id="resultLabel"/>

    <HBox spacing="10">
        <Button text="Back" onAction="#onBack"/>
        <Button text="Find code" onAction="#onFind"/>
    </HBox>
</VBox>
