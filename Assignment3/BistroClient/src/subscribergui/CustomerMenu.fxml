<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="customergui.CustomerMenuController"
      spacing="12" alignment="CENTER" prefWidth="420" prefHeight="320">

    <Button text="Book a reservation" onAction="#onBook" prefWidth="260"/>
    <Button text="Cancel reservation (by code)" onAction="#onCancel" prefWidth="260"/>
    <Button text="Lost confirmation code" onAction="#onLostCode" prefWidth="260"/>
    <Button text="Pay bill" onAction="#onPayBill" prefWidth="260"/>

    <Button text="Back" onAction="#onBack" prefWidth="260"/>
</VBox>
