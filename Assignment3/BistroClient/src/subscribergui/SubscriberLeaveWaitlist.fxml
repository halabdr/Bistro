<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="subscribergui.SubscriberLeaveWaitlistController"
      styleClass="action-container"
      stylesheets="@/styles/bistro_action.css"
      prefHeight="500" prefWidth="750">

    <!-- Header Section -->
    <VBox styleClass="action-header-enhanced">
        <Label text="Leave Waitlist" styleClass="action-header-title-large"/>
        <Label text="Enter your entry code to leave the waitlist" styleClass="action-header-subtitle"/>
    </VBox>

    <!-- Content Area -->
    <VBox styleClass="action-content" VBox.vgrow="ALWAYS">
        
        <!-- Form Card -->
        <VBox styleClass="action-card" spacing="20" maxWidth="480" alignment="CENTER">
            
            <Label text="Waitlist Exit" styleClass="action-card-title"/>
            
            <!-- Entry Code Input -->
            <VBox spacing="6" alignment="CENTER_LEFT" maxWidth="350">
                <Label text="Entry Code" styleClass="action-form-label"/>
                <TextField fx:id="codeField" 
                           styleClass="action-input-field"
                           promptText="e.g., WAIT123ABC"/>
                <Label text="Enter the code you received when joining the waitlist" 
                       style="-fx-text-fill: #718096; -fx-font-size: 11px; -fx-font-style: italic;"/>
            </VBox>
            
            <!-- Status Label -->
            <Label fx:id="statusLabel" 
                   text="" 
                   styleClass="action-status-label"
                   wrapText="true"
                   maxWidth="350"/>
            
            <!-- Action Button -->
            <Button text="Leave Waitlist"
                    onAction="#onLeave"
                    styleClass="action-primary-button"
                    prefWidth="200"/>
            
        </VBox>
        
        <!-- Back Button -->
        <HBox spacing="15" alignment="CENTER" maxWidth="480">
            <Button text="Back to Menu"
                    onAction="#onBack"
                    styleClass="action-back-button"
                    prefWidth="180"/>
        </HBox>
        
    </VBox>

</VBox>