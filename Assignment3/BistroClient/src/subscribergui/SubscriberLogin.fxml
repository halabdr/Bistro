<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<HBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="subscribergui.SubscriberLoginController"
      styleClass="login-split-container"
      stylesheets="@/styles/bistro_main.css"
      prefHeight="700" prefWidth="1000">

    <VBox styleClass="login-left-panel" 
          prefWidth="450"
          alignment="CENTER"
          spacing="25">
        
        <Region VBox.vgrow="ALWAYS"/>
        
        <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
            <image>
                <Image url="@/styles/bistro_logo.png"/>
            </image>
        </ImageView>
        
        <Label text="BISTRO" styleClass="welcome-logo-text"/>
        
        <Label text="Welcome Back, Member" 
               styleClass="welcome-subtitle"/>
        
        <Region VBox.vgrow="ALWAYS"/>
        
        <VBox alignment="CENTER" spacing="3">
            <Label text="© 2026 Bistro Restaurant" 
                   style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11px;"/>
        </VBox>
        
    </VBox>

    <VBox styleClass="login-right-panel" 
          prefWidth="550"
          alignment="CENTER"
          spacing="0"
          HBox.hgrow="ALWAYS">
        
        <Region VBox.vgrow="ALWAYS"/>
        
        <VBox styleClass="login-form-container" maxWidth="400">
            
            <VBox alignment="CENTER" spacing="6">
                <Label text="Subscriber Login" styleClass="login-title"/>
                <Label text="Sign in to manage your reservations" 
                       styleClass="login-subtitle"/>
            </VBox>
            
            <VBox spacing="12">
                <Label text="Email Address" styleClass="form-label-text"/>
                <TextField fx:id="emailField" 
                          promptText="Enter your email"
                          styleClass="login-input-field"/>
            </VBox>
            
            <VBox spacing="12">
                <Label text="Password" styleClass="form-label-text"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Enter your password"
                              styleClass="login-input-field"/>
            </VBox>
            
            <Button fx:id="loginBtn" 
                    text="Login"
                    styleClass="login-button"
                    onAction="#handleLogin"/>
            
            <HBox alignment="CENTER" spacing="8">
                <Separator prefWidth="140" styleClass="welcome-divider"/>
                <Label text="OR" style="-fx-text-fill: #94A3B8; -fx-font-size: 12px;"/>
                <Separator prefWidth="140" styleClass="welcome-divider"/>
            </HBox>
            
            <VBox spacing="12">
                <Label text="Subscriber Number" styleClass="form-label-text"/>
                <TextField fx:id="subscriberNumberField" 
                          promptText="Enter your subscriber number"
                          styleClass="login-input-field"/>
            </VBox>
            
            <Button fx:id="loginByNumberBtn" 
                    text="Login with Subscriber Number"
                    styleClass="welcome-action-button-secondary"
                    onAction="#handleLoginByNumber"
                    style="-fx-min-width: 320px;"/>
            
            <Button text="← Back to Welcome"
                    styleClass="back-link-button"
                    onAction="#handleBack"/>
            
        </VBox>
        
        <Region VBox.vgrow="ALWAYS"/>
        
    </VBox>

</HBox>