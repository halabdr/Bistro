<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="subscribergui.CancelReservationController"
      spacing="10" alignment="CENTER" prefWidth="420" prefHeight="320">

    <Label text="Cancel Reservation" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Confirmation code:"/>
        <TextField fx:id="codeField" prefWidth="200"/>
    </HBox>

    <Label fx:id="statusLabel"/>

    <HBox spacing="10">
        <Button text="Back" onAction="#onBack"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
