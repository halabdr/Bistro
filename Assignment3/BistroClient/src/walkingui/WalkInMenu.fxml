        </VBox>
        
    </VBox>

    <!-- Right Panel with Menu Options -->
    <VBox styleClass="menu-page" 
          prefWidth="550"
          alignment="CENTER"
          spacing="0"
          HBox.hgrow="ALWAYS">
        
