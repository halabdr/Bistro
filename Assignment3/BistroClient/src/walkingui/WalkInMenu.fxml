        <VBox alignment="CENTER" spacing="8">
            <Label text="Guest Menu" 
                   styleClass="menu-title"/>
            <Label text="All actions require your confirmation code"
                   style="-fx-text-fill: #718096; -fx-font-size: 13px;"/>
        </VBox>
        
