<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="servergui.ServerGuiController" prefWidth="900"
	prefHeight="650" styleClass="root">

	<!-- Header -->
	<top>
		<VBox styleClass="header">
			<Label text="Bistro Restaurant Server" styleClass="title" />
			<Label text="Server Management Console" styleClass="subtitle" />
		</VBox>
	</top>

	<center>
		<VBox spacing="15" styleClass="content-area">
			<padding>
				<Insets top="20" right="20" bottom="20" left="20" />
			</padding>

			<!-- Server Control Panel -->
			<VBox spacing="12" styleClass="card">
				<Label text="Server Control" styleClass="section-title" />

				<HBox spacing="15" alignment="CENTER_LEFT">
					<Label text="Port:" styleClass="field-label" />
					<TextField fx:id="portField" prefWidth="100"
						promptText="5555" styleClass="port-field" />

					<Button fx:id="startBtn" text="Start Server"
						onAction="#onStart" styleClass="btn-start" />
					<Button fx:id="stopBtn" text="Stop Server"
						onAction="#onStop" disable="true" styleClass="btn-stop" />

					<Region HBox.hgrow="ALWAYS" />

					<Label text="Status:" styleClass="field-label" />
					<Label fx:id="serverStatusLabel" text="OFFLINE"
						styleClass="status-offline" />
				</HBox>
			</VBox>

			<!-- Server Information -->
			<VBox spacing="12" styleClass="card">
				<Label text="Server Information" styleClass="section-title" />

				<GridPane hgap="20" vgap="10">
					<Label fx:id="ipLabel" text="IP: -" styleClass="info-label"
						GridPane.rowIndex="0" GridPane.columnIndex="0" />
					<Label fx:id="hostLabel" text="Host: -"
						styleClass="info-label" GridPane.rowIndex="0"
						GridPane.columnIndex="1" />
					<Label fx:id="portLabel" text="Port: -"
						styleClass="info-label" GridPane.rowIndex="1"
						GridPane.columnIndex="0" />
					<Label fx:id="clientsLabel" text="Connected Clients: 0"
						styleClass="info-label" GridPane.rowIndex="1"
						GridPane.columnIndex="1" />
				</GridPane>
			</VBox>

			<!-- Activity Log -->
			<VBox spacing="12" styleClass="card" VBox.vgrow="ALWAYS">
				<HBox spacing="10" alignment="CENTER_LEFT">
					<Label text="Activity Log" styleClass="section-title" />
					<Region HBox.hgrow="ALWAYS" />
					<Button text="Clear Log" onAction="#onClearLog"
						styleClass="btn-clear" />
				</HBox>

				<TextArea fx:id="logArea" prefHeight="280" editable="false"
					wrapText="true" styleClass="log-area" VBox.vgrow="ALWAYS" />
			</VBox>

			<!-- Exit Button -->
			<HBox alignment="CENTER_RIGHT">
				<Button text="Exit" onAction="#onExit" styleClass="btn-exit" />
			</HBox>

		</VBox>
	</center>

</BorderPane>